<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:id="@+id/edtArtistName"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="@string/artist_name"
            android:paddingHorizontal="5dp"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:textSize="22sp"
            android:textColor="#000"
            android:layout_marginTop="15dp"
            android:background="@drawable/edt_input"/>

        <EditText
            android:id="@+id/edtSongName"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:paddingHorizontal="5dp"
            android:hint="@string/song_name"
            android:textSize="22sp"
            android:textColor="#000"
            android:layout_marginTop="15dp"
            android:background="@drawable/edt_input"/>
        <Button
            android:id="@+id/btnGetLyrics"
            android:layout_width="122dp"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:text="@string/give_lyrics"
            android:textSize="16sp"
            android:textColor="#000"
            android:layout_marginTop="15dp"
            android:background="@drawable/btn"/>
        <TextView
            android:id="@+id/textLyrics"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:textSize="24sp"
            android:textColor="#000"
            android:paddingTop="13dp"
            android:paddingBottom="14dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/edt_output"/>

    </LinearLayout>




</ScrollView>